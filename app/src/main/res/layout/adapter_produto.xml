<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/estilo_adapter_produto_lista"
    android:padding="12dp"
    android:layout_margin="10dp"
    android:elevation="5dp" >

    <TextView
        android:id="@+id/txt_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/azul_secundario"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textAllCaps="true"
        android:text="Nome do produto"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp" />

    <View
        android:id="@+id/txt_linha_produto_foi_comprado"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@color/azul_primario" />

</RelativeLayout>