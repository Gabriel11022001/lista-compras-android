<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:elevation="5dp"
    android:background="@drawable/estilo_adapter_compra"
    android:layout_margin="10dp" >

    <ImageView
        android:id="@+id/img_sacola_compra"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sacola_compra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/view_separador"
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="@color/azul_primario"
        app:layout_constraintStart_toEndOf="@id/img_sacola_compra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp" />
    
    <TextView
        android:id="@+id/txt_data_criacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="01/02/2023"
        android:textColor="@color/azul_secundario"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view_separador"
        app:layout_constraintTop_toTopOf="@id/view_separador"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/txt_nome_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da lista de compra"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/txt_data_criacao"
        app:layout_constraintTop_toBottomOf="@id/txt_data_criacao" />

    <ImageView
        android:id="@+id/img_lista_compra_concluida"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_concluido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent "/>

</androidx.constraintlayout.widget.ConstraintLayout>